<Window x:Class="My_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:My_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid OpacityMask="{DynamicResource {x:Static SystemColors.InactiveSelectionHighlightBrushKey}}" Background="#FFCDFFCE">
        <Label Content="Mi Primera interfaz :)" HorizontalAlignment="Left" Margin="306,10,0,0" VerticalAlignment="Top" Width="484" FontSize="18" FontFamily="Arial Black"/>
        <Button x:Name="Boton_jugar" Content="Jugar" HorizontalAlignment="Center" Margin="0,99,0,0" VerticalAlignment="Top" Height="46" Width="148" BorderBrush="Black" Background="White" Click="Boton_jugar_Click"/>
        <Button x:Name="Boton_fotos" Content="Ver fotos" HorizontalAlignment="Center" Margin="0,171,0,0" VerticalAlignment="Top" Height="46" Width="148" Background="White" BorderBrush="Black" Click="Boton_fotos_Click"/>
        <Button x:Name="Boton_creditos" Content="Creditos" HorizontalAlignment="Center" Margin="0,237,0,0" VerticalAlignment="Top" Height="46" Width="148" Background="White" BorderBrush="Black" Click="Boton_creditos_Click"/>

    </Grid>
</Window>
